---
lint:
  linters:
    - name: checkstyle
    - name: detekt
    - name: ansible-lint
      include:
        - ".*\\.yml$"
    - name: yamllint
    - name: eslint
    - name: prettier
    - name: golint
  exclude:
    - "(\\.idea$)"
    - "(\\.gradle$)"
    - "(^build/)"
    - "(^gradle/)"
    - "(target/)"
